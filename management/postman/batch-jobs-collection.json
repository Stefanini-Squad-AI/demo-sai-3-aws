              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"jobName\": \"transactionPostingJob\",\n  \"parameters\": {\n    \"timestamp\": \"{{$timestamp}}\"\n  },\n  \"async\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/batch/jobs/execute",
              "host": ["{{baseUrl}}"],
              "path": ["api", "batch", "jobs", "execute"]
            }
